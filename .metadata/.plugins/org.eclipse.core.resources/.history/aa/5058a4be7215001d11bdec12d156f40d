package io.mk.creational.designpattern.mobile.abstractfactoty;

import java.util.Arrays;

import io.mk.creational.designpattern.os.factoty.MobileOS;
import io.mk.creational.designpattern.os.factoty.MobileOSFactory;
import io.mk.creational.designpattern.os.factoty.OSEnum;
import io.mk.creational.designpattern.processor.factory.MobileEnum;
import io.mk.creational.designpattern.processor.factory.MobileProcessor;
import io.mk.creational.designpattern.processor.factory.ProcessorEnum;

public class AbstractFactoryPatternTest {

	public static void main(String[] args) {

		for (MobileEnum mobile : Arrays.asList(MobileEnum.values())) {
			MobileAbstractFactory mobileFactory = MobileFactoryCreator.getMobileFactory(mobile);

			if (mobileFactory instanceof MobileOSFactory) {
				for (OSEnum operatingSystem : Arrays.asList(OSEnum.values())) {
					MobileOS mobileOS = mobileFactory.getMobileOS(operatingSystem);
					System.out.println("Operating System: " + operatingSystem);
					System.out.println("Latest Version: " + mobileOS.getLatestVersion());
					System.out.println("Open Source: " + mobileOS.isOpenSource());
					System.out.println("Available Apps Count: " + mobileOS.getAvailableAppsCount() + "\n");
				}

			} else if (mobileFactory instanceof MobileFactory) {

				for (ProcessorEnum processor : Arrays.asList(ProcessorEnum.values())) {
					MobileProcessor mobileProcessor = mobileFactory.getMobileProcessor(processor);
					System.out.println("Processor: " + processor);
					System.out.println("Latest Serious: " + mobileProcessor.getLatestSerious());
					System.out.println("CPU Clock Rate: " + mobileProcessor.getCPUClockRate() + "\n");
				}
			}
		}
	}
}
